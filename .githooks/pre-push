#!/usr/bin/env bash

YELLOW="\e[93m"
GREEN="\e[32m"
RED="\e[31m"
ENDCOLOR="\e[0m"

printMessage() {
    printf "${YELLOW}üçã Lemonade : $1${ENDCOLOR}\n"
}

printSuccess() {
    printf "${GREEN}üçã Lemonade : $1${ENDCOLOR}\n"
}

printError() {
    printf "${RED}‚ùå Lemonade : $1${ENDCOLOR}\n"
}

printMessage "Running local Lemonade pre-push hook."

if [[ `git status --porcelain` ]]; then
    printError "This script needs to run against committed code only. Please commit or stash you changes."
    exit 1
fi
