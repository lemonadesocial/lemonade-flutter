#!/usr/bin/env bash

YELLOW="\e[93m"
GREEN="\e[32m"
RED="\e[31m"
ENDCOLOR="\e[0m"

printMessage() {
    printf "${YELLOW}üçã Lemonade : $1${ENDCOLOR}\n"
}

printSuccess() {
    printf "${GREEN}üçã Lemonade : $1${ENDCOLOR}\n"
}

printError() {
    printf "${RED} ‚ùå Lemonade : $1${ENDCOLOR}\n"
}
printMessage "Running local Lemonade pre-commit hook."

dart format --set-exit-if-changed .

if [ $? -ne 0 ]
then
    printError "Auto format code. Please commit again."
    exit 1
fi

